@model YoutubeViewModel
@{
    ViewData["Title"] = "Youtube Comments Extractor";
}

<div class="jumbotron">
    <h3>Youtube Comments Extractor</h3>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label>Enter YouTube video link</label>
                <input class="form-control" id="youtubelink" />
            </div>
            <p id="indicator">Extracting...</p>
            <button class="btn btn-primary btn-md" id="extract_action">Extract Comments</button>
        </div>

        </div>
        <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center" style="margin-top:100px">
            <button class="btn btn-success btn-lg" id="downloadCommentsAction">Download</button>
        </div>
        </div>
    </div>